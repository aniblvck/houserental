<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>House&House</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-slate-100">
  <div>


    <nav class="bg-cyan-500 h-32 p-7 w-full ">
      <div class="container mx-auto flex justify-between items-center mt-8 w-full">
        <!-- Logo and Title -->
        <div class="flex items-center space-x-4">

          <span class="text-slate-100 text-4xl relative  ">House&House</span>
        </div>
        <!-- logo -->
        <div class="relative left-20">
          <img src="" alt="Logo" class="h-8 w-8">
        </div>
        <!-- Navigation Links -->
        <div class="hidden md:flex space-x-6  text-white text-2xl mt-4 font-light relative left-14">
          <a href="/login" class="hover:text-gray-300    ">Login</a>
          <a href="/register" class="hover:text-gray-300   ">Register</a>
          <a href="/subscribe" class="hover:text-gray-300   ">Subscription</a>
          <a href="/contact" class="hover:text-gray-300   ">Contact Us</a>

        </div>
        <!-- Mobile Menu Button -->
        <div class="md:hidden">
          <button id="menu-btn" class="text-white focus:outline-none">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
          </button>
        </div>
      </div>
      <!-- Mobile Menu -->
      <div id="menu" class="hidden md:hidden">
        <a href="/login" class="block text-white py-2">Login</a>
        <a href="/register" class="block text-white ">Register</a>
        <a href="/subscribe" class="block text-white py-2">Subscription</a>
        <a href="/contact" class="block text-white py-2">Contact Us</a>


      </div>
    </nav>

    <div
      class="text-center text-3xl text-zinc-600 italic font-sans h-36 flex justify-center items-center border-b border-zinc-700">
      <h1>For every place you stay you make new memories </h1>
    </div>

    <div class="items-center justify-center flex flex-col mt-10 bg-slate-300 max-w-full">

      <div class="py-8 mr-7 text-3xl text-zinc-700 border-b border-zinc-700  ">
        <h1>Select your Home</h1>
      </div>

      <div class="flex justify-evenly items-stretch space-x-11 mr-7 mt-14">


        <div
          class=" flex  flex-col justify-evenly max-w-md mx-auto bg-white border border-gray-300 rounded-lg shadow-md p-4">
          <label for="city" class="block text-lg font-medium text-gray-700 mb-2">Select a City in Madhya
            Pradesh</label>
          <select id="city" name="city"
            class="block w-full border border-gray-300 h-9  rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            <option value="">Select a city</option>
            <option value="bhopal">Bhopal</option>
            <option value="indore">Indore</option>
            <option value="gwalior">Gwalior</option>
            <option value="jabalpur">Jabalpur</option>
            <option value="ujjain">Ujjain</option>
            <option value="sagar">Sagar</option>
            <option value="satna">Satna</option>
            <option value="ratlam">Ratlam</option>
            <option value="rewa">Rewa</option>
            <option value="murwara">Vidisha</option>
          </select>

          <div id="area-container" class="mt-4  hidden ">
            <label for="area" class="block text-sm font-medium text-gray-700 mb-2">Select an Area</label>
            <select id="area" name="area"
              class="block w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
              <!-- Areas will be populated dynamically -->
            </select>
          </div>
        </div>



        <div
          class=" h-32 flex  flex-col justify-evenly  max-w-md mx-auto bg-white rounded-lg shadow-md p-4  border border-gray-300">
          <label for="budget" class="block text-lg font-medium   text-gray-700 mb-2">Select Your Budget (in
            Rupees)</label>
          <select id="budget" name="budget"
            class="block w-full border border-gray-300 rounded-md  h-7 shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            <!-- Budget options will be populated dynamically -->
          </select>
        </div>

        <div
          class=" h-32 flex  flex-col justify-evenly max-w-md mx-auto bg-white rounded-lg shadow-md p-4  border border-gray-300">
          <label for="furnishing" class="block text-lg font-medium text-gray-700 mb-2">Select Furnishing Type</label>
          <select id="furnishing" name="furnishing"
            class="block w-full border  h-7 border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            <option value="furnished">Furnished</option>
            <option value="non-furnished">Non-Furnished</option>
          </select>
        </div>

        <div
          class="h-32 flex  flex-col justify-evenly max-w-md mx-auto bg-white rounded-lg shadow-md p-4  border border-gray-300">
          <label for="property-type" class="block text-lg font-medium text-gray-700 mb-2">Select Property Type</label>
          <select id="property-type" name="property-type"
            class="block h-7 w-full border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
            <option value="hostel">Hostel</option>
            <option value="pg">PG</option>
            <option value="flat">Flat</option>
            <option value="bachelor-friendly">Bachelor-friendly homes</option>
            <option value="non-bachelor-friendly">Non-bachelor-friendly homes</option>
          </select>
        </div>


      </div>

      <button type="submit" class="w-fit bg-cyan-500 hover:bg-cyan-700 text-white font-light text-2xl  py-2 px-4 mr-7 rounded text-center relative top-20">Submit</button>

    </div>




























    <script>
      const areas = {
        bhopal: ["Arera Colony", "TT Nagar", "Kolar Road", "MP Nagar", "Ratnagiri", "Ashoka Garden", "Gautam Nagar", "Shanti Niketan", "Jahangirabad", "Koefiza", "Indrapuri", "Jk Road", "Nizamuddin"],
        indore: ["Vijay Nagar", "Palasia", "Rau", "Rajwada"],
        gwalior: ["Lashkar", "Morar", "Thatipur", "City Center"],
        jabalpur: ["Napier Town", "Wright Town", "Vijay Nagar", "Garha"],
        ujjain: ["Freeganj", "Nanakheda", "Madhav Nagar", "Dewas Road"],
        sagar: ["Civil Lines", "Makronia", "Katra", "Rahatgarh"],
        satna: ["Panna Road", "Maihar", "Nagod", "Amarpatan"],
        ratlam: ["Station Road", "Alkapuri", "Do Batti", "Shastri Nagar"],
        rewa: ["University Road", "Civil Lines", "Sirmour Chowk", "Venkat Road"],
        murwara: ["Katni Junction", "Barhi", "Bilhari", "Katangi"]
      };

      document.getElementById('city').addEventListener('change', function () {
        const selectedCity = this.value;
        const areaSelect = document.getElementById('area');
        const areaContainer = document.getElementById('area-container');

        if (selectedCity) {
          const cityAreas = areas[selectedCity];

          // Clear previous options
          areaSelect.innerHTML = '';

          // Add new options
          cityAreas.forEach(area => {
            const option = document.createElement('option');
            option.value = area.toLowerCase().replace(/\s+/g, '-');
            option.textContent = area;
            areaSelect.appendChild(option);
          });

          // Show the area select menu
          areaContainer.classList.remove('hidden');
        } else {
          // Hide the area select menu if no city is selected
          areaContainer.classList.add('hidden');
        }
      });


      const budgetSelect = document.getElementById('budget');
      const minBudget = 500;
      const maxBudget = 35000;
      const step = 500;

      for (let i = minBudget; i <= maxBudget; i += step) {
        const option = document.createElement('option');
        option.value = i;
        option.textContent = `â‚¹${i.toLocaleString()}`;
        budgetSelect.appendChild(option);
      }
    </script>






  </div>
</body>

</html>